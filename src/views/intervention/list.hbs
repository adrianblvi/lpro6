<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row p-2">
                    <div class="col-sm-10 text-center">
                        <h2>Listado de Intervenciones</h2>
                    </div>
                    <!--<div class="col-sm-4 ml-auto">
                        <div class="search-box">
                            <i class="material-icons">&#xE8B6;</i>
                            <input type="text" class="form-control" placeholder="Search&hellip;">
                        </div>
                    </div>-->
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="col-sm">
                            <a href="/int/new/{{id_int}}" class="btn btn-primary waves-effect waves-light"><i
                                    class="mdi mdi-plus ml-auto"></i> Nueva Intervención</a>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Intervención</th>
                        <th>Fecha</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each interventions}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{startdate}}</td>
                        <td>
                            <a href="/int/list/{{_id}}" class="view" title="View" data-toggle="tooltip"><i
                                    class="material-icons">&#xE417;</i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>{{showing}}</b> out of <b>{{num}}</b> entries</div>
                <ul class="pagination">
                    <li class="page-item "><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" <i class="fa fa-angle-double-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
</div>