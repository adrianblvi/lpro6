<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {{#if user.gender}}
                            <img src="/images/bombero_male.png" alt="Admin" class="rounded-circle" width="130">
                            {{else}}
                            <img src="/images/bombero_female.png" alt="Admin" class="rounded-circle" width="130">
                            {{/if}}
                            <div class="mt-3">
                                <h4>{{user.name}}</h4>
                                <p class="text-secondary mb-1"> {{user.puesto}} LPRO06</p>
                                <p class="text-muted font-size-sm">{{user.address}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre Completo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.name}} {{user.lastname}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.email}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefono</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                (+34) {{user.phone}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dni</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.dni}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Direcci√≥n</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.address}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="grey-bg container-fluid">
            <section id="minimal-statistics">
                <div class="row gutters-sm p-3">
                    <div class="col-xl-4  col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="media d-flex">
                                        <div class="align-self-center">
                                            <a href="/train/list">
                                                <i class="fas fa-dumbbell primary font-large-2 float-left"></i>
                                            </a>
                                        </div>
                                        <div class="media-body text-right">
                                            <h3 class="primary">278</h3>
                                            <span>Entrenamientos</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4  col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="media d-flex">
                                        <div class="align-self-center">
                                            <a href="/sim/list">
                                                <i class="fas fa-fire-extinguisher warning font-large-2 float-left"></i>
                                            </a>
                                        </div>
                                        <div class="media-body text-right">
                                            <h3 class="warning">156</h3>
                                            <span>Simulacros</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
