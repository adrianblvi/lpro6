                                        <div class="align-self-center">
                                            <a href="/int/list">
                                                <i class=" fas fa-truck success font-large-2 float-left"></i>
                                            </a>
                                        </div>
                                        <div class="media-body text-right">
                                            <h3 class="success">156</h3>
                                            <span>Intervenciones</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>